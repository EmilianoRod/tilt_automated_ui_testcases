# --- Application ---
BASE_URL=https://your-dev-or-staging-host
TIMEOUT_SECONDS=20
HEADLESS=false
BROWSER=chrome
SCREENSHOT_PATH=screenshots

# --- Admin login ---
ADMIN_EMAIL=__set_me__
ADMIN_PASSWORD=__set_me__

# --- MailSlurp ---
MAILSLURP_API_KEY=__set_me__
MAILSLURP_INBOX_ID=__set_me__
MAILSLURP_ALLOW_CREATE=true
MAILSLURP_FORCE=true
MAILSLURP_DEBUG=true

# --- Stripe (optional) ---
STRIPE_TEST_SECRET_KEY=__set_me__
STRIPE_WEBHOOK_SECRET=__set_me__
STRIPE_PUBLISHABLE_KEY=__set_me__
STRIPE_SUCCESS_URL=dashboard/shop

# --- Optional local dev tools ---
PW_WORKDIR=/path/to/playwright/project
PW_PROJECT=Google Chrome
NPX_PATH=/usr/local/bin/npx
